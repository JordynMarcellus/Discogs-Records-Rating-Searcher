print-styles()
// variables 
color1 = #282E33;
color2 = #25373A;
color3 = #164852;
color4 = #495E67;
color5 = #FF3838;

body, html
	color color1
	font-size: 16px
+mobile()
	body,html
		font-size:12px	

h1 
	margin-top: 0
	
fieldset
	border: 0
	padding: 0
/*

Standardized 

*/
.wrapper
	min-height: 100vh
	display: flex
	align-items: center
	justify-content: center
	flex-direction: column

.btn
	button: color5 'medium'
	click-down()
	
.form-label
	radio(color5)
	display: inline-block
	margin-right: 2rem

/*

Targeting our CSS 

*/

.header_wrapper
	bg: "../assets/discogs2.jpg"
	background-size: cover

.transparent_overlay
	background-color: rgba(255,255,255,0.5)	
	width: 100%

#artist-search
	field: left
	padding: 0.5rem
	margin-right: 1.25rem
	
#content-wrapper
	// background-color: color4
	relative()
		
.artist-name > h1
	text-align: center
	padding-top: 1.25rem
	
#album-wrapper
	display: flex
	flex-direction: row
	width: 100%
	flex-wrap: wrap
	align-items: center
	justify-content: center

.album-info-box
	width:300px
	height: 200px
	margin: .5rem 1rem
	text-align: center
	border: 1px solid grey

.learn-more-btn
	button: color5 'small'

.field-text
	margin-right: 2rem 

/*

Sliding info-modal slider

*/

#sliding-modal
	width: 50vw
	height: 100vh
	position: fixed
	right: -50vw
	top: 0
	background-color: white
	transition: 500ms

#album-modal 
	h1,
	h2
		text-align: center

#video-gallery
	position: relative
	
.gallery-item
	position: absolute
	width: 100%

ol#album-tracklist,
ol#album-traclist > ul
	ol()

#close-btn
	icon-x()
	cursor: hand
	position: absolute
	right: 0
	top: 0

.left-arrow,
.right-arrow
	position: absolute
	padding-top:25%
	height: 100%

.left-arrow
	icon-arrow(left, 40px, white, 2px)
	left: 0
	top: 0
	z-index: 2

.right-arrow
	icon-arrow(right, 40px, white, 2px)
	right: 0
	top:0
	z-index: 2

.video_wrapper
	ratio-box(16/9)
	position: relative
	
	iframe
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 100%
		z-index: 1

/*
footer styling
*/

footer 
	background-color: color4
	color: color1 
	padding: 2rem 1rem

footer > p
	margin: 0